{
  "Front_Matter_Template": {
    "prefix": "f.fmt",
    "body": [
      "---",
      "label: ${1:$TM_FILENAME_BASE}",
      "hide_body: ${2|false,true|}",
      "is_partial: ${3|false,true|}",
      "fields:",
      "$0"
    ],
    "description": "Create a new Forestry.io Front Matter Template"
  },
  "Text Field": {
    "prefix": "f.text",
    "body": [
      "- type: text",
      "  name: $1",
      "  label: $2",
      "  description: ${3}",
      "  config: ",
      "    required: ${4|false,true|}",
      "  default: ${5}"
    ],
    "description": "Add a Text Field to a Front Matter Template"
  },
  "Textarea": {
    "prefix": "f.textarea",
    "body": [
      "- type: textarea",
      "  name: $1",
      "  label: $2",
      "  description: ${3}",
      "  config: ",
      "    required: ${4|false,true|}"
    ],
    "description": "Add a Textarea to a Front Matter Template"
  },
  "WYSIWYG": {
    "prefix": "f.wysiwyg",
    "body": [
      "- type: textarea",
      "  name: $1",
      "  label: $2",
      "  description: ${3}",
      "  config: ",
      "    required: ${4|false,true|}",
      "    wysiwyg: true",
      "    schema:",
      "      format: ${5|markdown,html-blocks,html|}"
    ],
    "description": "Add a Textarea to a Front Matter Template"
  },

  "Toggle Field": {
    "prefix": "f.toggle",
    "body": [
      "- type: boolean",
      "  name: $1",
      "  label: $2",
      "  description: ${3}",
      "  default: ${4|false,true|}"
    ],
    "description": "Add a Toggle to a Front Matter Template"
  },
  "Number Field": {
    "prefix": "f.num",
    "body": [
      "- type: number",
      "  name: $1",
      "  label: $2",
      "  description: ${3}",
      "  config:",
      "    min: ${4} # Optional",
      "    max: ${5} # Optional",
      "  default: ${4|false,true|} # Optional"
    ],
    "description": "Add a Number to a Front Matter Template"
  },
  "Color Field": {
    "prefix": "f.color",
    "body": [
      "- type: color",
      "  name: $1",
      "  label: $2",
      "  description: ${3} # Optional",
      "  config:",
      "    color_format: ${4|Hex,RGB|}",
      "  default: ${5} # Optional"
    ],
    "description": "Add a Number to a Front Matter Template"
  }
}
