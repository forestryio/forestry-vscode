{
  "name": "forestry",
  "displayName": "forestry",
  "description": "",
  "version": "0.2.0",
  "publisher": "forestryio",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.forestry/settings.yml"
  ],
  "main": "./out/extension",
  "contributes": {
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/yaml.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Forestry configuration",
      "properties": {
        "forestry.pathToSettings": {
          "type": [
            "string",
            "null"
          ],
          "default": ".forestry",
          "description": "Specifies the folder path containing the forestry settings."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/forestryio/forestry-vscode"
  },
  "bugs": {
    "url": "https://github.com/forestryio/forestry-vscode/issues"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "publish": "./node_modules/.bin/vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "@types/yamljs": "^0.2.30",
    "typescript": "^2.6.1",
    "vsce": "^1.43.0",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "yamljs": "^0.3.0"
  }
}
